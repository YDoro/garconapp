<?xml version='1.0' encoding='utf-8'?>
<widget id="com.garconapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GarçonApp</name>
    <description>
        App de uso das garçonetes do restaurante só de cenoura
    </description>
    <author email="yan_mvd@hotmail.com" href="">
        Yan Mello
    </author>
    <access origin="*" />
    <allow-intent href="geo:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="tel:*" />
    <content src="index.html" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="StatusBarBackgroundColor" value="E86C13" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="*" />
    <access origin="http://cozinhapp.sergiolopes.org" />
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <preference name="BackgroundColor" value="0xF2F2F2FF" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.1">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
